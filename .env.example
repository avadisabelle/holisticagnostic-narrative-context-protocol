# NCP Story Studio - Environment Variables
# Copy this file to .env and customize as needed

# ============================================
# Application Settings
# ============================================

# Node environment (development, production)
NODE_ENV=production

# Application title (shown in browser tab)
VITE_APP_TITLE=NCP Story Studio

# ============================================
# Port Configuration
# ============================================

# Port to expose the application (default: 5177)
APP_PORT=5177

# ============================================
# Build Settings
# ============================================

# Generate source maps in production build (true/false)
VITE_BUILD_SOURCEMAP=false

# ============================================
# Docker Settings
# ============================================

# Docker compose project name
COMPOSE_PROJECT_NAME=ncp-story-studio

# ============================================
# Optional Features
# ============================================

# Enable analytics (true/false)
# VITE_ENABLE_ANALYTICS=false

# API base URL (if needed for future features)
# VITE_API_URL=https://api.example.com

# ============================================
# Development Settings
# ============================================

# Enable debug mode in development
# VITE_DEBUG=true

# Hot reload port (usually same as APP_PORT)
# VITE_HMR_PORT=5177
